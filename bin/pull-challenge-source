#!/usr/bin/env bash

if [ "$#" -ne 2 ]; then
  echo "usage: $0 container-name chall"
  exit 1
fi

mv experiments/ubuntu/cgc/challenges/$2/src experiments/ubuntu/cgc/challenges/$2/src.bak
mv experiments/ubuntu/cgc/challenges/$2/lib experiments/ubuntu/cgc/challenges/$2/lib.bak

docker cp $1:/cgc/challenges/$2/Makefile experiments/ubuntu/cgc/challenges/$2/Makefile
 
docker cp $1:/cgc/challenges/$2/src/ experiments/ubuntu/cgc/challenges/$2/src/
docker cp $1:/cgc/challenges/$2/lib/ experiments/ubuntu/cgc/challenges/$2/lib/
